{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "out"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}